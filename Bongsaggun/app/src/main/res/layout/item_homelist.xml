<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView_item_homelist"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:background="#fefefe">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_sumnail_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_sumnail"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/textView_Dday"
                android:layout_width="88dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:background="#aa000000"
                android:gravity="center"
                android:text="D-12"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#ffffff"/>
        </RelativeLayout>

        <!-- 텍스트 설명 부 -->
        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/layout_sumnail_image"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textVIew_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="유기견센터 봉사"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/text_homelist"
                android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/layout_voluntaryPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cal_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/ic_event_black_18dp"/>

                <TextView
                    android:id="@+id/textView_voluntaryPeriod_start"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="2015.04.07"
                    android:textColor="@color/text_homelist"
                    />

                <TextView
                    android:id="@+id/textView_voluntaryPeriod_mid"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text=" ~ "
                    android:textColor="@color/text_homelist"
                    />

                <TextView
                    android:id="@+id/textView_voluntaryPeriod_end"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="2015.04.10"
                    android:textColor="@color/text_homelist"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/textView_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="서울 서초구 "
                android:textSize="14sp"
                android:textColor="@color/text_homelist"
                />
        </LinearLayout>

        <!-- 시간보여준는 부분 -->
        <LinearLayout
            android:id="@+id/layout_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/layout_text"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clock_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_access_time_black_18dp"/>

            <TextView
                android:id="@+id/textView_time"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="12시간"
                android:textColor="@color/text_homelist"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>