<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.j2ffrey_2.bongsaggun.MyPageFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--사용자가 등록한 이미지가 보이는 부분-->

        <LinearLayout
            android:id="@+id/my_page_image_container"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/app_theme"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
           >



            <com.pkmmte.view.CircularImageView
                android:id="@+id/my_page_image_View"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                app:border="true"
                app:border_color="#EEEEEE"
                app:border_width="4dp"
                app:shadow="true" />


        </LinearLayout>





<!--리스트뷰 생성-->
<LinearLayout
    android:id="@+id/my_page_listview_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ListView
        android:id="@+id/my_page_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

</LinearLayout>




    </LinearLayout>

</FrameLayout>
