<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView_item_searchlist"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="#fefefe">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/container_sumnail_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/imageView_sumnail"
                android:layout_width="88dp"
                android:layout_height="98dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/textView_Dday"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#aa000000"
                android:gravity="center"
                android:text="D-12"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#ffffff"
                android:textSize="14sp"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/container_voluntaryPeriod"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/container_sumnail_image"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cal_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_event_black_18dp"/>

            <TextView
                android:id="@+id/textView_voluntaryPeriod_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15.04.07"
                android:textColor="@color/home_listitem_text"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/textView_voluntaryPeriod_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ "
                android:textColor="@color/home_listitem_text"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/textView_voluntaryPeriod_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15.04.10"
                android:textColor="@color/home_listitem_text"
                android:textSize="14sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/textVIew_title"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/container_voluntaryPeriod"
            android:layout_alignLeft="@id/container_voluntaryPeriod"
            android:layout_toRightOf="@id/container_sumnail_image"
            android:singleLine="true"
            android:text="유기견센터 봉사"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/home_listitem_text"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView_location"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/container_voluntaryPeriod"
            android:layout_below="@id/container_voluntaryPeriod"
            android:layout_toRightOf="@id/container_sumnail_image"
            android:singleLine="true"
            android:text="서울 서초구 "
            android:textColor="@color/home_listitem_text"
            android:textSize="14sp"
            />

        <LinearLayout
            android:id="@+id/container_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/container_voluntaryPeriod"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clock_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_access_time_black_18dp"/>

            <TextView
                android:id="@+id/textView_time"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="12시간"
                android:textColor="@color/home_listitem_text"
                android:textSize="14sp"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>